<launch>
  <!-- <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/> -->
  <arg name="model" default="waffle" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="-2.0"/>
  <arg name="y_pos" default="-0.5"/>
  <arg name="z_pos" default="0.0"/>
  <arg name="show_rviz" value="true" />


  <!-- Launch Gazebo with the TurtleBot3 world -->
  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="x_pos" value="$(arg x_pos)" />
    <arg name="y_pos" value="$(arg y_pos)" />
    <arg name="z_pos" value="$(arg z_pos)" />
  </include>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="50.0" />
  </node>

  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom_tf"
      args="0 0 0 0 0 0 1 map odom"/>

  <!-- UFO mapping server -->
  <include file="$(find ufo_mapping)/launch/server.launch">
    <arg name="resolution" value="0.05" />
    <arg name="depth_levels" value="17" />
    <arg name="frame_id" value="map" />
    <arg name="max_distance" value="5" />
    <!-- <arg name="insert_hits" value="/camera/depth/points"/> -->
    <arg name="insert_rays" value="/camera/depth/points"/>
  </include>

  <!-- RViz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ufo_demo)/rviz/turtledemo.rviz" if="$(arg show_rviz)"/>

  <!-- To teleop the turtlebot run this in separate terminal -->
  <!-- roslaunch turtlebot3_teleop turtlebot3_teleop_key.launch -->

</launch>
